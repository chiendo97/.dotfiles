{
  "suggest.timeout": 1000,
  "suggest.maxCompleteItemCount": 30,
  "coc.source.buffer.enable": false,
  "coc.source.around.enable": false,
  "coc.source.file.enable": false,
  "coc.preferences.formatOnSaveFiletypes": ["typescriptreact", "json", "javascriptreact", "python"],
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "languageserver": {
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         },
         "clang": {
          "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/10.0.1",
          "extraArgs": [
            "-isystem",
            "/Library/Developer/CommandLineTools/usr/include/c++/v1",
            "-I",
            "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include/"        
          ]
        }
       }
    }
  },
  "python.trace.server": "verbose",
  "python.jediEnabled": true,
  "python.jediPath": "/usr/local/lib/python3.7/site-packages/",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "/usr/local/bin/pylint",
  "python.linting.pylintArgs": ["--generate-members"],
  "python.formatting.autopep8Path": "/usr/local/bin/autopep8"
}
